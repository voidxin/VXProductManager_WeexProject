       <list>
            <cell repeat="{{groups}}">
                <div style="height: 150;flex-direction: row;align-items: center;" onclick="cellClick($index)">
	                <div style="flex:0.9;">
	                	 <text style="font-size: 35;margin-left: 15;">{{shop.shopName}}</text>
	                </div>

